
@{
    ViewBag.Title = "index";
}

<h2>Créer votre itinéraire</h2>

    <script type="text/javascript">
        google.maps.event.addDomListener(window, 'load', function () {
            var places = new google.maps.places.Autocomplete(document.getElementById('arrr'));
            google.maps.event.addListener(places, 'place_changed', function () {
                var place = places.getPlace();
                var address = place.formatted_address;
                var latitude = place.geometry.location.lat();
                var longitude = place.geometry.location.lng();
                var mesg = "Address: " + address;
                mesg += "\nLatitude: " + latitude;
                mesg += "\nLongitude: " + longitude;
                
            });
             places = new google.maps.places.Autocomplete(document.getElementById('depp'));
            google.maps.event.addListener(places, 'place_changed', function () {
                var place = places.getPlace();
                var address = place.formatted_address;
                var latitude = place.geometry.location.lat();
                var longitude = place.geometry.location.lng();
                var mesg = "Address: " + address;
                mesg += "\nLatitude: " + latitude;
                mesg += "\nLongitude: " + longitude;
             
            });
        });
</script>

<form method="post" action="/Voyage/create">
    <div class="form-group">
        <label for="dep">Depart</label>
        
        <input type='text' name="depart" id="depp" class="form-control" />
        </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Arrivé</label>
    
        <input type='text' name="arrive" id="arrr" class="form-control" />
     </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Type de voiture</label>
        <select name="type" id="type" class="custom-select">
            <option selected>Open this select menu</option>
            <option value="4x4">4x4</option>
            <option value="berline">berline</option>
            <option value="coupe">coupe</option>
        </select>
    </div>
    <div class="form-group">
        <div class='input-group date' >
            <label for="date">date</label>
            <input type='text' name="date" id="datepicker" class="form-control" />
        </div>
    </div>
    <div class="input-group clockpicker">
        <label for="date">Heure départ</label>
        <input type="text" name="heure" id="heure" class="form-control">
        
    </div>
    <div class="form-group">
        <div class='input-group'>
            <label for="exampleInputEmail1">Nombre de place</label>
            <input type="text" class="form-control" name="nbplace" id="nbplace" aria-describedby="emailHelp" placeholder="Nombre de place">
        </div>
    </div>
        <div class="form-group">
            <div class='input-group'>
                <label for="exampleInputEmail1">Prix</label>
                <input type="text" class="form-control" name="prix" id="prix" aria-describedby="emailHelp" placeholder="Prix">
                </div>
            </div>
    <div class="form-group">
        <div class='input-group'>
            <label for="exampleInputEmail1">Adresse point de départ</label>
            <input type="text" class="form-control" name="note" id="note" aria-describedby="emailHelp" placeholder="Point de départ">
        </div>
    </div>
    <div class="form-group" id="listtype">
        <label for="exampleInputEmail1">Condition</label>
        <select name="typeV" id="arr" class="custom-select">
            <option selected>Open this select menu</option>
            @{
                foreach (var type in ViewBag.list)
                {
                    <option value="@type.id">@type.value</option>
                }
            }
        </select>
    
    </div>
   
    <div id="plus"></div>
    <button type="button" id="add" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Ajouter des conditions de voyage
    </button>
        <button type="submit" class="btn btn-primary">Valider</button>
</form>



<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#datepicker").datepicker();
            $('.clockpicker').clockpicker();
            $("#heure").on("click", function () {

                $(" .clockpicker-button").text("Valider");
            })
            $("#add").on("click", function () {
                $("#listtype").clone().appendTo("#plus");
            })
               

        });
    });
</script>